<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.jraf.android.bikey.app.hud.HudActivity" >

    <FrameLayout
        android:id="@+id/conFragments"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/imgGpsStatus"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:padding="4dp"
        android:src="@color/hud_gps_stopped" />

    <View
        android:id="@+id/vieFragmentCycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/conTabsLeft"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@color/tab_bar_bg"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/chkTabSpeed"
            style="@style/tab"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:text="@string/hud_tab_speed" />

        <CheckBox
            android:id="@+id/chkTabDuration"
            style="@style/tab"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:text="@string/hud_tab_duration" />

        <CheckBox
            android:id="@+id/chkTabDistance"
            style="@style/tab"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:text="@string/hud_tab_distance" />

        <CheckBox
            android:id="@+id/chkTabAverageMovingSpeed"
            style="@style/tab"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:text="@string/hud_tab_averageMovingSpeed" />
    </LinearLayout>

    <org.jraf.android.util.ui.checkable.CheckableRelativeLayout
        android:id="@+id/chkRecord"
        style="@style/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/conTabsLeft"
        android:background="@drawable/record_bg"
        android:clickable="true" >

        <TextView
            android:id="@+id/chkRecord_text"
            style="@style/tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="@string/hud_chkRecord_created"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </org.jraf.android.util.ui.checkable.CheckableRelativeLayout>

</RelativeLayout>