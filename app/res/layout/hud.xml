<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.hud.HudActivity" >

    <LinearLayout
        android:id="@+id/conLeftPanel"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgGpsStatus"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="4dp"
            android:src="#F00" />

        <ToggleButton
            android:id="@+id/togRecording"
            style="@android:style/Widget.Holo.Button.Toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOff="REC"
            android:textOn="REC" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/conLeftPanel" />

</RelativeLayout>